---

<header 
  class="fixed top-0 left-0 right-0 z-40 transition-all duration-300"
  id="main-header"
>
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8" role="navigation" aria-label="Navigazione principale">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a 
          href="/" 
          class="text-2xl font-bold transition-colors duration-200 text-primary-400 hover:text-primary-300"
          aria-label="Pollici CM - Pagina principale"
        >
          <span class="serif italic">Pollici</span><span class="text-neutral-300">CM</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="flex items-center space-x-8">
          <a 
            href="/" 
            class="font-medium transition-colors duration-200 italic text-neutral-200 hover:text-primary-400"
          >
            <em>Home</em>
          </a>
          <a 
            href="/chi-siamo" 
            class="font-medium transition-colors duration-200 italic text-neutral-200 hover:text-primary-400"
          >
            <em>Chi Siamo</em>
          </a>
          <a 
            href="/#calcolatore" 
            class="font-medium transition-colors duration-200 italic text-neutral-200 hover:text-primary-400"
          >
            <em>Calcolatore</em>
          </a>
          <a 
            href="/conversioni-popolari" 
            class="font-medium transition-colors duration-200 italic text-neutral-200 hover:text-primary-400"
          >
            <em>Conversioni Popolari</em>
          </a>
          <a 
            href="/contatti" 
            class="font-medium transition-colors duration-200 italic text-neutral-200 hover:text-primary-400"
          >
            <em>Contatti</em>
          </a>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <div class="flex items-center">
        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-2 rounded-md transition-colors duration-200"
          class="text-neutral-200 hover:text-primary-400 hover:bg-neutral-800"
          aria-label="Menu di navigazione"
          aria-expanded="false"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            <path id="close-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" style="display: none;"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden" style="display: none;">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-neutral-900 rounded-lg mt-2 shadow-lg">
        <a 
          href="/" 
          class="block px-3 py-2 text-neutral-300 hover:text-primary-400 font-medium transition-colors duration-200 italic"
        >
          <em>Home</em>
        </a>
        <a 
          href="/chi-siamo" 
          class="block px-3 py-2 text-neutral-300 hover:text-primary-400 font-medium transition-colors duration-200 italic"
        >
          <em>Chi Siamo</em>
        </a>
        <a 
          href="/#calcolatore" 
          class="block px-3 py-2 text-neutral-300 hover:text-primary-400 font-medium transition-colors duration-200 italic"
        >
          <em>Calcolatore</em>
        </a>
        <a 
          href="/conversioni-popolari" 
          class="block px-3 py-2 text-neutral-300 hover:text-primary-400 font-medium transition-colors duration-200 italic"
        >
          <em>Conversioni Popolari</em>
        </a>
        <a 
          href="/contatti" 
          class="block px-3 py-2 text-neutral-300 hover:text-primary-400 font-medium transition-colors duration-200 italic"
        >
          <em>Contatti</em>
        </a>
      </div>
    </div>
  </nav>