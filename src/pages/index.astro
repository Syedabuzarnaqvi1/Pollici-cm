---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Calculator from '../components/Calculator.astro';
import ContentSection from '../components/ContentSection.astro';
import Footer from '../components/Footer.astro';
import { parseCSV } from '../utils/csvParser';

// Import CSV data for sitemap generation
import csvData from '../assets/Inches to CM Data.csv?raw';
const conversions = parseCSV(csvData);
---

<Layout
  title="Pollici CM - Convertitore Preciso da Pollici a Centimetri | Calcolatore Online"
  description="Converti pollici in centimetri con il nostro calcolatore online gratuito e preciso. Formula esatta, conversioni istantanee e guida completa per professionisti."
  keywords="pollici cm, convertitore pollici centimetri, calcolatore pollici, inches to cm, conversione unità misura, pollici millimetri"
  canonical="https://pollici-in-cm.it/"
  isHomepage={true}
>
  <Header />
  <main id="main-content" class="pt-20 lg:pt-24">
    <Hero />
    <Calculator />
    <ContentSection />
    
    <!-- Popular Conversions Section -->
    <section class="py-16 lg:py-24 bg-neutral-800">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl lg:text-4xl font-bold text-neutral-200 mb-4 serif">
              <em>Conversioni Più Popolari</em>
            </h2>
            <p class="text-lg text-neutral-400 italic">
              <em>Accedi rapidamente alle conversioni più richieste</em>
            </p>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {conversions.slice(0, 20).map((conversion) => (
              <a 
                href={`/${conversion.slug}`}
                class="bg-neutral-700 hover:bg-neutral-600 p-4 rounded-lg text-center transition-colors duration-200 group"
              >
                <div class="text-lg font-bold text-primary-400 group-hover:text-primary-300">
                  {conversion.inches}"
                </div>
                <div class="text-sm text-neutral-400 italic">
                  <em>{conversion.centimeters} cm</em>
                </div>
              </a>
            ))}
          </div>
          
          <div class="text-center mt-8">
            <a 
              href="/conversioni-popolari" 
              class="inline-flex items-center bg-primary-500 hover:bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200 mb-4"
            >
              <em>Vedi Tutte le Conversioni Popolari</em>
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
            <p class="text-neutral-400 italic">
              <em>Esplora tutte le {conversions.length} conversioni nel nostro database completo</em>
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>