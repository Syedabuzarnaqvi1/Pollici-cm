---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { parseCSV } from '../utils/csvParser';
import csvData from '../assets/Inches to CM Data.csv?raw';

const conversions = parseCSV(csvData);
---

<Layout
  title="Tutte le Conversioni Pollici-Centimetri | Conversioni Popolari"
  description="Accedi a tutte le conversioni da pollici a centimetri disponibili. Database completo con conversioni precise e dettagliate."
  keywords="conversioni popolari pollici, elenco completo pollici cm, tutte conversioni pollici centimetri"
>
  <Header />
  <main class="min-h-screen bg-gradient-to-br from-neutral-900 via-neutral-800 to-neutral-900 pt-20 lg:pt-24">
    <!-- Hero Section -->
    <section class="pt-12 pb-16 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl lg:text-5xl font-bold text-neutral-200 mb-6 serif">
          <em>Conversioni Popolari Pollici-Centimetri</em>
        </h1>
        <p class="text-xl text-neutral-400 mb-8 italic leading-relaxed">
          <em>Database completo con {conversions.length} conversioni precise da pollici a centimetri</em>
        </p>
        
        <!-- Quick Navigation -->
        <div class="mb-8">
          <div class="flex flex-wrap justify-center gap-2 mb-4">
            <a href="#frazioni" class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-lg text-sm transition-colors">
              <em>Frazioni</em>
            </a>
            <a href="#piccole" class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-lg text-sm transition-colors">
              <em>1-10 Pollici</em>
            </a>
            <a href="#medie" class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-lg text-sm transition-colors">
              <em>11-50 Pollici</em>
            </a>
            <a href="#grandi" class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-lg text-sm transition-colors">
              <em>50+ Pollici</em>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Conversions Grid -->
    <section class="pb-20 px-4">
      <div class="max-w-6xl mx-auto">
        <!-- Frazioni (< 1 inch) -->
        <div id="frazioni" class="mb-16">
          <h2 class="text-2xl font-bold text-neutral-200 mb-6 serif">
            <em>Frazioni di Pollice</em>
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
            {conversions.filter(c => c.inches < 1).map((conversion) => (
              <a 
                href={`/${conversion.slug}`}
                class="group bg-neutral-800 rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-300 border border-neutral-700 hover:border-blue-600"
              >
                <div class="text-center">
                  <div class="text-2xl font-bold text-blue-400 mb-2 group-hover:scale-105 transition-transform">
                    {conversion.inches}"
                  </div>
                  <div class="text-sm text-neutral-400 mb-3">
                    pollici
                  </div>
                  <div class="text-lg font-semibold text-neutral-200 mb-1">
                    {conversion.centimeters} cm
                  </div>
                  <div class="text-xs text-neutral-500">
                    = {(conversion.centimeters * 10).toFixed(1)} mm
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Piccole (1-10 inches) -->
        <div id="piccole" class="mb-16">
          <h2 class="text-2xl font-bold text-neutral-200 mb-6 serif">
            <em>Misure Piccole (1-10 Pollici)</em>
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
            {conversions.filter(c => c.inches >= 1 && c.inches <= 10).map((conversion) => (
              <a 
                href={`/${conversion.slug}`}
                class="group bg-neutral-800 rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-300 border border-neutral-700 hover:border-blue-600"
              >
                <div class="text-center">
                  <div class="text-2xl font-bold text-blue-400 mb-2 group-hover:scale-105 transition-transform">
                    {conversion.inches}"
                  </div>
                  <div class="text-sm text-neutral-400 mb-3">
                    pollici
                  </div>
                  <div class="text-lg font-semibold text-neutral-200 mb-1">
                    {conversion.centimeters} cm
                  </div>
                  <div class="text-xs text-neutral-500">
                    = {(conversion.centimeters * 10).toFixed(1)} mm
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Medie (11-50 inches) -->
        <div id="medie" class="mb-16">
          <h2 class="text-2xl font-bold text-neutral-200 mb-6 serif">
            <em>Misure Medie (11-50 Pollici)</em>
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
            {conversions.filter(c => c.inches > 10 && c.inches <= 50).map((conversion) => (
              <a 
                href={`/${conversion.slug}`}
                class="group bg-neutral-800 rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-300 border border-neutral-700 hover:border-blue-600"
              >
                <div class="text-center">
                  <div class="text-2xl font-bold text-blue-400 mb-2 group-hover:scale-105 transition-transform">
                    {conversion.inches}"
                  </div>
                  <div class="text-sm text-neutral-400 mb-3">
                    pollici
                  </div>
                  <div class="text-lg font-semibold text-neutral-200 mb-1">
                    {conversion.centimeters} cm
                  </div>
                  <div class="text-xs text-neutral-500">
                    = {(conversion.centimeters * 10).toFixed(1)} mm
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Grandi (50+ inches) -->
        <div id="grandi" class="mb-16">
          <h2 class="text-2xl font-bold text-neutral-200 mb-6 serif">
            <em>Misure Grandi (50+ Pollici)</em>
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
            {conversions.filter(c => c.inches > 50).map((conversion) => (
              <a 
                href={`/${conversion.slug}`}
                class="group bg-neutral-800 rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-300 border border-neutral-700 hover:border-blue-600"
              >
                <div class="text-center">
                  <div class="text-2xl font-bold text-blue-400 mb-2 group-hover:scale-105 transition-transform">
                    {conversion.inches}"
                  </div>
                  <div class="text-sm text-neutral-400 mb-3">
                    pollici
                  </div>
                  <div class="text-lg font-semibold text-neutral-200 mb-1">
                    {conversion.centimeters} cm
                  </div>
                  <div class="text-xs text-neutral-500">
                    = {(conversion.centimeters * 10).toFixed(1)} mm
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>