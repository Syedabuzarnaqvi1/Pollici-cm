---
export interface Props {
  title: string;
  description: string;
  keywords?: string;
  canonical?: string;
  isHomepage?: boolean;
  breadcrumbName?: string;
}

const { 
  title, 
  description, 
  keywords = "pollici cm, conversione pollici centimetri, calcolatore pollici, inches to cm", 
  canonical,
  isHomepage = false,
  breadcrumbName
} = Astro.props;

const canonicalURL = canonical || Astro.url.href;

// Fix canonical URL to use production domain
const productionCanonicalURL = canonical || canonicalURL.replace('http://localhost:4321', 'https://pollici-in-cm.it');
